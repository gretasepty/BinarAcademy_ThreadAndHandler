<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:layout_margin="20dp"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Tugas.TugasHandler">

    <EditText
        android:id="@+id/edt_bbHandler"
        android:hint="Berat Badan"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <EditText
        android:id="@+id/edt_tbHandler"
        android:hint="Tinggi Badan"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <Button
        android:text="hitung"
        android:id="@+id/btn_hitungHandler"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/txt_hasilBMIHandler"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/txt_hasilIMTHandler"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

</LinearLayout>